<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Celta Software</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/css/select2.min.css" rel="stylesheet" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.0/js/select2.min.js"></script>    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src='~/Images/logos.png' alt="Celta" width="70%" />
               
            </div>
            @if (Session["userID"] != null)
            {
                
                List<int> permisos = (List<int>)Session["permisosUser"];                            
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Documentos/Boletas<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Boletas Nuevas", "Index", "documentos")</li>
                                <li>@Html.ActionLink("Boletas para Despacho(Hoy)", "despachoDomicilio", "documentos")</li>
                                <li>@Html.ActionLink("Buscardor Historico Boletas", "Buscador", "documentos")</li>
                                                         
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Despachos<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Boletas Despachadas", "Despachados", "listadoDespacho")</li>
                                <li>@Html.ActionLink("Boletas Despachar Mañana", "noDespachados", "listadoDespacho")</li>                                
                                <li>@Html.ActionLink("Boletas Despachar Hoy", "porDespachar", "listadoDespacho")</li>
                                
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Bodegas/Areas Internas", "Index", "bodegas") </li>
                        <li>@Html.ActionLink("Transportistas", "Index", "Transportista") </li>
                        <li>@Html.ActionLink("Registro de Acciones", "Index", "log")</li>
                        @if (permisos.Contains(1))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Usuarios<b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("Todos", "Index", "Users")</li>
                                    <li>@Html.ActionLink("Crear", "Create", "Users")</li>                                    
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Mi Sesion<b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                    

                            
                                <li><a href="@Url.Action("cambiarDatos", "Users")">Cambiar Datos</a></li>
                                <li class="divider"></li>                               
                                <li><a href="@Url.Action("Logout", "Users")">Cerrar Sesión</a></li>
                            </ul>
                        </li>
                        
                    </ul>
                </div>
            }
            
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div><!--navbar-fixed-bottom-->   
        <br /><br />                         
            <footer class="navbar hidden">
                <p>&copy; @DateTime.Now.ToString("dd-MM-yyyy") - Celta Software</p>
            </footer>
        </div>
    </div>

    
</body>
</html>
