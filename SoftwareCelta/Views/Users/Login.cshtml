@{
    ViewBag.Title = "Login";
}

<div class="container">   
    <br class="xs-hidden">
    <br class="xs-hidden">
    @if (ViewBag.mensaje != null && ViewBag.mensaje == "login erroneo")
    {
        <div class="col-md-12">
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert"
                        aria-hidden="true">
                    &times;
                </button>
                Usuario y/o password erróneos
            </div>
        </div>
        <div class="clear-fix"></div>
    }
    <br class="xs-hidden">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="page-header">
                <h2 class="text-center">LOGIN - CELTA</h2>
            </div>
            <div class=" login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Por favor ingrese sus datos</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Nombre de usuario" name="userName" type="text"
                                       autofocus required style="max-width:100% ; width:100% !important">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password"
                                       value="" required style="max-width:100% ; width:100% !important">
                            </div>
                            <button type="submit" class="btn btn-lg btn-success btn-block">Ingresar</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>