@model SoftwareCelta.Models.dw_movin
@{
    ViewBag.Title = "Documento Registrado";
    int contadorProductos = 1;
    string despacho = "despacho";
    SoftwareCelta.DAL.ContextBDCelta db = new SoftwareCelta.DAL.ContextBDCelta();
    SoftwareCelta.Models.dw_envio datosEnvio = (SoftwareCelta.Models.dw_envio)ViewData["datosEnvio"];
}

<h2>Documento @Model.numeroDocumento</h2>
<br />
@Model.fechaEmision
<br />
<div class="row">
    <div class="col-md-12">
        <label>Direccion</label>
        <br />
        <textarea style="max-width: 100% !important; width:100%;" class="form-control" name="direccion">@datosEnvio.direccion</textarea>
    </div>
    <div class="col-md-12">
        <label>Referencia</label>
        <br />
        <textarea style="max-width: 100% !important; width:100%;" class="form-control" name="referencia">@datosEnvio.observacion</textarea>
    </div>
</div>
<br />
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Codigo Producto
                    </th>
                    <th>
                        Descripcion Producto
                    </th>
                    <th>
                        Cantidad Producto
                    </th>
                    <th>
                        Area Interna /Bodega
                    </th>
                    <th>Entrega</th>                    
                </tr>
            </thead>
            <tbody>

                @foreach (SoftwareCelta.Models.dw_detalle detalle in (List<SoftwareCelta.Models.dw_detalle>)ViewData["detalleDocumento"])
                {
                    string nameDespacho = despacho + contadorProductos;
                    <tr>
                        <td>
                            @detalle.codigoProducto
                        </td>
                        <td>
                            @detalle.descripcionProducto
                        </td>
                        <td>
                            @detalle.cantidadProducto
                        </td>
                        <td>                                                            
                            @{                                
                                string nombreBodega = db.Bodegas.Find(@detalle.dw_areaInternaID).nombre;                                        
                            }
                            @nombreBodega
                        </td>
                        <td>
                            @if (@detalle.estadoDespacho.Equals(0)) { 
                                <text>
                                    Entrega Inmediata
                                </text>
                            }else if(@detalle.estadoDespacho.Equals(1)){
                                <text>
                                    Despacho Domicilio
                                </text>
                            }                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />        
    </div>






